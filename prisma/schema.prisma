generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(cuid())
  nickname  String
  content   String
  createdAt DateTime @default(now())
}

model Memo {
  id        String   @id @default(cuid())
  category  String
  text      String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Photo {
  id        String   @id @default(cuid())
  url       String
  caption   String
  date      String?
  createdAt DateTime @default(now())
}

model Milestone {
  id          String   @id @default(cuid())
  date        String
  title       String
  description String
  createdAt   DateTime @default(now())
}

// 管理员账号
model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // bcrypt 加密的密码
  status    String   @default("pending") // pending, approved, rejected
  createdAt DateTime @default(now())
}

// 安全问题验证
model SecurityQuestion {
  id        String   @id @default(cuid())
  question  String   // 问题文本
  answer    String   // bcrypt 加密的答案
  createdAt DateTime @default(now())
}

// 登录尝试记录（用于暴力破解防护）
model AuthAttempt {
  id        String   @id @default(cuid())
  ip        String
  success   Boolean
  createdAt DateTime @default(now())

  @@index([ip, createdAt])
}
