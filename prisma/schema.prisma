generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(cuid())
  nickname  String
  content   String
  createdAt DateTime @default(now())
}

model Memo {
  id        String   @id @default(cuid())
  category  String
  text      String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Photo {
  id        String   @id @default(cuid())
  url       String
  caption   String
  date      String?
  createdAt DateTime @default(now())
}

model Milestone {
  id          String   @id @default(cuid())
  date        String
  title       String
  description String
  createdAt   DateTime @default(now())
}

// Simple Admin Auth
model Admin {
  id       String @id @default(cuid())
  username String @unique
  password String // Will store a hashed PIN or password
}
