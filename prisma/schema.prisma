generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(cuid())
  nickname  String
  content   String
  createdAt DateTime @default(now())
}

model Memo {
  id        String   @id @default(cuid())
  category  String
  text      String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Photo {
  id        String   @id @default(cuid())
  url       String
  caption   String
  date      String?
  createdAt DateTime @default(now())
}

model Milestone {
  id          String   @id @default(cuid())
  date        String
  title       String
  description String
  createdAt   DateTime @default(now())
}

// 管理员账号
model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // bcrypt 加密的密码
  status    String   @default("pending") // pending, approved, rejected
  createdAt DateTime @default(now())
}

// 安全问题验证
model SecurityQuestion {
  id        String   @id @default(cuid())
  question  String   // 问题文本
  answer    String   // bcrypt 加密的答案
  hint      String?  // 答案提示（可选）
  createdAt DateTime @default(now())
}

// 登录尝试记录（用于暴力破解防护）
model AuthAttempt {
  id        String   @id @default(cuid())
  ip        String
  success   Boolean
  createdAt DateTime @default(now())

  @@index([ip, createdAt])
}

// 站点全局配置 (Key-Value 存储)
model SiteConfig {
  key       String   @id
  value     String   // JSON string or plain text
  updatedAt DateTime @updatedAt
}

// 自定义计时器
model EventTimer {
  id          String   @id @default(cuid())
  title       String
  date        String   // ISO date string
  type        String   // "countdown" (倒计时) or "countup" (正计时)
  description String?
  createdAt   DateTime @default(now())
}

// 全局配置历史记录
model SiteConfigHistory {
  id        String   @id @default(cuid())
  key       String
  value     String   // 记录当时的值
  createdAt DateTime @default(now())
  
  // Optional: add author if we want to track who changed it
  // adminId String? 
}

// 悬浮窗宠物
model Pet {
  id            String   @id @default(cuid())
  name          String   @default("小猫咪")
  level         Int      @default(1)
  experience    Int      @default(0)
  happiness     Int      @default(100)   // 0-100 开心值
  hunger        Int      @default(100)   // 0-100 饱腹度
  evolution     Int      @default(1)     // 进化阶段 1-4
  color         String   @default("pink") // 宠物颜色
  mode          String   @default("live2d") // live2d, classic
  accessories   Json     @default("[]")  // 已解锁配饰
  equippedItems Json     @default("{}") // 当前装备
  customSprite  String?                  // 自定义外观URL
  lastFedAt     DateTime @default(now())
  lastPlayAt    DateTime @default(now())
  lastVisitAt   DateTime @default(now()) // 用于计算离线衰减
  dailyActions  Json     @default("{}") // 每日动作次数记录
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// 首页通用提醒 (Reminder)
model Reminder {
  id        String   @id @default(cuid())
  content   String
  dueDate   String   // ISO date time string
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}
