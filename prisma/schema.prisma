generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(cuid())
  nickname  String
  content   String
  createdAt DateTime @default(now())
}

model Memo {
  id        String   @id @default(cuid())
  category  String
  text      String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Photo {
  id        String   @id @default(cuid())
  url       String
  caption   String
  date      String?
  createdAt DateTime @default(now())
}

model Milestone {
  id          String   @id @default(cuid())
  date        String
  title       String
  description String
  createdAt   DateTime @default(now())
}

// 管理员账号
model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // bcrypt 加密的密码
  status    String   @default("pending") // pending, approved, rejected
  createdAt DateTime @default(now())
}

// 安全问题验证
model SecurityQuestion {
  id        String   @id @default(cuid())
  question  String   // 问题文本
  answer    String   // bcrypt 加密的答案
  hint      String?  // 答案提示（可选）
  createdAt DateTime @default(now())
}

// 登录尝试记录（用于暴力破解防护）
model AuthAttempt {
  id        String   @id @default(cuid())
  ip        String
  success   Boolean
  createdAt DateTime @default(now())

  @@index([ip, createdAt])
}

// 站点全局配置 (Key-Value 存储)
model SiteConfig {
  key       String   @id
  value     String   // JSON string or plain text
  updatedAt DateTime @updatedAt
}

// 自定义计时器
model EventTimer {
  id          String   @id @default(cuid())
  title       String
  date        String   // ISO date string
  type        String   // "countdown" (倒计时) or "countup" (正计时)
  description String?
  createdAt   DateTime @default(now())
}

// 全局配置历史记录
model SiteConfigHistory {
  id        String   @id @default(cuid())
  key       String
  value     String   // 记录当时的值
  createdAt DateTime @default(now())
  
  // Optional: add author if we want to track who changed it
  // adminId String? 
}
